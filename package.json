{
    "name": "ember-qunit-testem-launcher",
    "displayName": "Testem module launcher",
    "description": "Opens Testem module URL for module in current test file",
    "version": "1.2.0",
    "publisher": "DocX",
    "license": "MIT",
    "homepage": "https://github.com/DocX/ember-qunit-testem-launcher/blob/master/README.md",
    "bugs": {
        "url": "https://github.com/DocX/ember-qunit-testem-launcher/issues",
        "email": "lukas@dolezalu.cz"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/DocX/ember-qunit-testem-launcher.git"
    },
    "icon": "images/testem.png",
    "galleryBanner": {
        "color": "#bdb470",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.29.0"
    },
    "categories": [
        "Other", "Programming Languages"
    ],
    "activationEvents": [
        "onCommand:extension.openModuleUrl",
        "onCommand:extension.startTestemServer",
        "onCommand:extension.startServerAndOpenModuleUrl"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.openModuleUrl",
                "title": "Testem: Run file module"
            },
            {
                "command": "extension.startTestemServer",
                "title": "Testem: Start server in terminal"
            },
            {
                "command": "extension.startServerAndOpenModuleUrl",
                "title": "Testem: Start server and open module"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Testem launcher configuration",
            "properties": {
                "testemLauncher.testemURLSessionId": {
                    "type": "string",
                    "default": "1111",
                    "description": "ID used in the testem URL to identify testing session. This is usually randomly generated by testem."
                },
                "testemLauncher.testemServerURL": {
                    "type": "string",
                    "default": "http://localhost:7357",
                    "description": "The base URL to use when opening testem browser. Can be overwritten for remote server or custom ports."
                },
                "testemLauncher.testemStartServerCmd": {
                    "type": "string",
                    "default": "./node_modules/ember-cli/bin/ember test --server",
                    "description": "Shell command that starts the testem server in TDD mode"
                }
            }
        }    
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "yarn run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "sinon": "^7.1.1",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.21"
    },
    "dependencies": {
        "@types/superagent": "^3.8.6",
        "superagent": "^4.1.0"
    }
}
